$orange = #FF6D10

html, body
	width 100%
	height 100%

body
	background-image linear-gradient(top, #d7dadc 0%, #fff 25%, #fff 100%)
	background-size cover
	background-repeat no-repeat
	font-family Raleway, "Helvetica Neue", Helvetica, Arial, sans-serif, sans-serif
	font-size 16px
	line-height 1.6

*
	box-sizing border-box

#topbar
	display block
	background #fff
	margin-bottom 30px

	@media (min-width 480px)
		margin-top 15px

	@media (min-width 768px)
		margin-top 30px

	@media (min-width 992px)
		margin-top 30px

	@media (min-width 1200px)
		margin-top 45px

	a
		text-decoration none

	.nav li
		padding 0 16px
		margin 0
		height 70px
		line-height 70px

		a
			padding 0
			margin 0
			color #333
			font-family Raleway, "Helvetica Neue", Helvetica, Arial, sans-serif, sans-serif
			font-weight bold

			&:focus, &:hover
				background transparent
				color $orange

#logo
	color #333
	font-family Raleway, "Helvetica Neue", Helvetica, Arial, sans-serif, sans-serif
	font-weight 900
	font-size 22px
	text-transform uppercase
	height 70px
	padding 0 15px
	line-height 70px

.button, button
	&.btn.btn-primary
		background-color $orange
		border-color $orange

		&:hover, &:focus
			background-color darken($orange, 10%)
			border-color darken($orange, 20%)
#topblock
	display block
	margin-bottom 25px

	.page-header
		margin 20px 0
		margin-top 0

		h2
			margin-top 0
			margin-bottom 0
			font-weight bold

#panel-search-box
	display block
	padding-top 20px
	padding-left 20px
	padding-right 20px

	select, input
		overflow ellipsis

#add-new-agent
	label
		font-size 14px
		font-weight bold
		text-transform uppercase

	p
		font-size 14px
		margin-top -8px
		margin-bottom 7px

	.modal-title
		font-weight bold

	.modal-body
		.form-group
			margin-bottom 25px

			&:last-child
				margin-bottom 0

#search-results-section
	display block

	.page-header
		margin-bottom 10px

		h2
			font-weight bold
			margin-bottom 0

	.page-subheader
		display block
		margin-bottom 30px

.agent-block
	display block
	border 1px solid #ddd
	border-radius 5px
	margin-bottom 25px
	padding 14px 18px
	transition background .5s ease-out
	position relative

	@media (max-width 767px)
		padding-top 48px

	agent-block-platform()
		position absolute
		top 0
		right 0
		font-size 13px
		font-weight bold
		text-transform uppercase
		background #f0f0f0
		padding 8px 10px 8px 14px
		border-bottom-left-radius 5px

	&.agent-block-ps4:before
		content "PlayStation 4"
		agent-block-platform()

	&.agent-block-pc:before
		content "PC (Uplay / Steam)"
		agent-block-platform()

	&.agent-block-xbone:before
		content "Xbox One"
		agent-block-platform()

	&:hover, &:focus
		background rgba(#ffffee, 60%)

	&:last-child
		margin-bottom 0

	.agent-block-username
		display block
		text-align center
		padding 7px 10px
		background-color #f5f5f5
		border-radius 30px
		font-weight bold
		font-size 18px

	.agent-block-stats
		margin-top 20px

		.agent-block-stat-title
			display block
			text-align center
			padding 5px 7px
			background-color #f5f5f5
			border-radius 5px
			border-bottom-left-radius 0
			border-bottom-right-radius 0
			font-size 13px
			font-weight bold
			text-transform uppercase

		.agent-block-stat-left
			display block
			text-align center

			span
				display block
				border-bottom 1px solid #ddd
				padding 7px 0 5px 0
				margin-bottom 5px
				font-size 13px
				font-weight bold
				text-transform uppercase

	.agent-block-activity
		display block
		border-bottom 2px solid #ddd
		padding-bottom 14px
		margin-bottom 20px
		font-size 14px
		font-weight bold
		text-transform uppercase
		position relative

		@media (max-width 767px)
			margin-top 24px

		&:before, &:after
			content ""
			display block
			position absolute
			bottom -6px
			left 50%
			transform translateX(-50%) rotate(45deg)
			size 10px
			background #ddd

		&:after
			size 9px
			background #fff
			bottom -3px


		span
			background-color #f5f5f5
			display inline-block
			padding 5px 10px
			margin-right 8px

	.agent-block-skills
		list-style-type none
		padding 0
		margin 0
		margin-top 20px
		font-size 14px
		font-weight bold

		li
			display inline-block
			border 1px solid #ddd
			padding 4px 8px

			.fa
				margin-right 5px

			&:first-child
				border-top-left-radius 4px
				border-bottom-left-radius 4px

			&:last-child
				border-top-right-radius 4px
				border-bottom-right-radius 4px

footer
	margin-top 30px
	padding 30px 0
	background-color #374652
	color #d2d2d2

	h3
		font-weight bold
		font-size 18px
		text-transform uppercase
		padding-bottom 15px

	p
		font-size 14px
		line-height 23px